import random

secret = random.randint(1, 100)
attempts = 7

for i in range(1, attempts + 1):
    guess = int(input("Enter guess: "))

    if guess == secret:
        print("Correct! You won in", i, "attempts")
        break
    elif guess < secret:
        print("Too low")
    else:
        print("Too high")

    print("Attempts left:", attempts - i)

if guess != secret:
    print("You lost. Number was:", secret)
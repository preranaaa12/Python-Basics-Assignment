count = int(input("How many numbers? "))

total = 0
max_num = None
min_num = None

for i in range(1, count + 1):
    x = float(input("Enter number: "))
    total = total + x

    if max_num is None or x > max_num:
        max_num = x

    if min_num is None or x < min_num:
        min_num = x

avg = total / count

print("Sum:", total)
print("Average:", avg)
print("Maximum:", max_num)
print("Minimum:", min_num)
n = int(input("Enter a number: "))

if n < 0:
    print("Factorial not defined for negative numbers")

else:
    fact = 1
    print(str(n) + "! =", end=" ")

    for i in range(n, 0, -1):
        fact = fact * i
        print(i, end="")
        if i != 1:
            print(" x ", end="")

    print(" =", fact)